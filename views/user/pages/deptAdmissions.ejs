<%- include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admissions | <%= department.name %> Colleges in India</title>
  <link rel="stylesheet" href="/styles/style.css">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      color: #333;
      margin: 0;
      padding: 0;
      background: linear-gradient(135deg, #92a792 0%, #2d392d 50%, #8fa98d 100%);
      min-height: 100vh;
      overflow-x: hidden;
    }

    main {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    .banner {
      text-align: center;
      padding: 40px 20px;
      background: linear-gradient(135deg, rgba(79, 94, 77, 0.8), rgba(47, 64, 45, 0.8));
      border-radius: 10px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
      color: white;
      margin-bottom: 30px;
    }

    .banner h1 {
      font-size: 2.8rem;
      margin-bottom: 10px;
      color: #ffffff;
    }

    .banner p {
      font-size: 1.2rem;
      color: #e5e5e5;
    }

    .college-listings h2 {
      font-size: 2rem;
      margin-top: 30px;
      color: #e5e5e5;
      font-weight: bold;
      text-align: center;
    }

    .college-list {
      display: grid;
      grid-template-columns: repeat(2, 1fr); /* Ensures two cards per row */
      gap: 20px;
      margin-top: 20px;
      padding: 0;
    }

    .college-list li {
      list-style: none;
      background: #ffffff;
      border: 1px solid #e0e0e0;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .college-list li:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .college-list img {
      width: 100%;
      height: 180px;
      object-fit: cover;
      border-bottom: 1px solid #e0e0e0;
    }

    .college-details {
      padding: 15px;
      text-align: center;
    }

    .college-details h3 {
      margin: 10px 0;
      font-size: 1.5rem;
      color: #2d392d;
    }

    .college-details p {
      margin: 5px 0;
      font-size: 0.95rem;
      color: #555;
    }

    .apply-button {
      display: block;
      margin: 15px auto;
      background: linear-gradient(135deg, #28a745, #218838);
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 8px;
      font-weight: bold;
      text-transform: uppercase;
      cursor: pointer;
      transition: background 0.3s ease, transform 0.2s ease;
      width: 80%;
      text-align: center;
    }

    .apply-button:hover {
      background: linear-gradient(135deg, #218838, #1c7430);
      transform: scale(1.05);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .college-list {
        grid-template-columns: 1fr; /* Switch to one card per row on small screens */
      }
    }
  </style>
</head>
<body>
  <main>
    <section class="banner">
      <h1><%= department.name %> Colleges in India</h1>
      <p>Find the perfect <%= department.name %> program for your career goals.</p>
    </section>

    <section class="college-listings">
      <h2>COLLEGES OFFERING <%= department.name %></h2>
      <ul class="college-list">
        <% colleges.forEach(college => { %>
          <li>
            <a href="/collegeApplication/<%= college._id %>">
              <img src="/images/<%= college.images[0] ? college.images[0].path : 'default_college_image.jpg' %>" alt="<%= college.name %>">
              <div class="college-details">
                <h3><%= college.name %></h3>
                <p>Location: <%= college.district %>, <%= college.state %></p>
                <p>Category: <%= college.category %></p>
                <p>Type: <%= college.type %></p>
              </div>
            </a>
            <form action="/admissionApplication/<%= college._id %>" method="get">
              <button type="submit" class="apply-button">Apply Now</button>
            </form>
          </li>
        <% }); %>
      </ul>
    </section>
  </main>
</body>
</html>
<%- include('../partials/footer') %>
