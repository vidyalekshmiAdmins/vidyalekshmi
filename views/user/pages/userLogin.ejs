<link
  rel="stylesheet"
  href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
  integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
  crossorigin="anonymous"
/>

<script type="module" src="/config/google.js"></script>
<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Arial, sans-serif;
  }

  body {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(
        135deg,
        rgba(255, 255, 255, 0.1),
        rgba(146, 167, 146, 0.2)
      ),
      url("/user/img/bg-blur.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .login-container {
    background: white;
    padding: 60px;
    border-radius: 24px;
    width: 95%;
    max-width: 1000px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    display: grid;
    grid-template-columns: 1fr 1px 1fr;
    gap: 50px;
    position: relative;
  }

  .login-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
    padding-top: 10px;
    position: relative;
    padding-left: 80px;
  }

  .login-left img {
    width: 700px;
    height: auto;
    border-radius: 12px;
    position: absolute;
    left: -410px;
    top: 50%;
    transform: translateY(-50%);
    clip-path: inset(0 0 0 50%);
  }

  .user-icon {
    width: 80px;
    height: 80px;
    background: #92a792;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .user-icon svg {
    width: 40px;
    height: 40px;
    fill: white;
  }

  .divider {
    background: #e0e0e0;
    height: 100%;
    width: 1px;
  }

  .login-right {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .title {
    font-size: 28px;
    color: #707f70;
    margin-bottom: 20px;
    text-align: center;
    margin: 0 auto;
  }

  .input-group {
    position: relative;
  }

  .input-group input {
    width: 100%;
    padding: 12px 40px;
    border: 1px solid #e0e0e0;
    border-radius: 50px;
    font-size: 16px;
    outline: none;
    transition: border-color 0.3s;
  }

  .input-group svg {
    position: absolute;
    left: 12px;
    top: 50%;
    transform: translateY(-50%);
    width: 20px;
    height: 20px;
    fill: #92a792;
  }

  .input-group input:focus {
    border-color: #92a792;
  }

  .links {
    display: flex;
    justify-content: space-between;
    font-size: 14px;
  }

  .links a {
    color: #666;
    text-decoration: none;
    transition: color 0.3s;
  }

  .links a:hover {
    color: #92a792;
  }

  .login-btn {
    background: #2d392d;
    color: white;
    border: none;
    padding: 12px;
    border-radius: 50px;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s;
    width: 100%;
    max-width: 230px;
    margin: 0 auto;
    display: block;
    text-align: center;
  }

  .login-btn:hover {
    background: #374837;
  }

  .welcome-text {
    color: #666;
    text-align: center;
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .login-container {
      grid-template-columns: 1fr;
      padding: 24px;
      gap: 24px;
    }

    .divider {
      display: none;
    }

    .login-left img {
      position: relative;
      left: 0;
      top: 0;
      transform: translateY(0);
    }
  }
  .google {
    display: flex;
    justify-content: center;
    margin-top: 20px;
  }

  .google a {
    background-color: #fff;
    border: 1px solid #ccc;
    border-radius: 10px;
    padding: 10px 100px;
    font-size: 16px;
    color: #000;
    text-decoration: none;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .google a img {
    margin-right: 10px;
  }

  .google a:hover {
    background-color: #eee;
  }
</style>

<body>
  <div class="login-container">
    <div class="login-left">
      <img src="./user/img/logo-removebg.png" alt="User Image" />
      <div class="user-icon">
        <svg viewBox="0 0 24 24">
          <path
            d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
          />
        </svg>
      </div>
      <h2>Login</h2>
      <p class="welcome-text">
        Welcome back ! Please Login to<br />your account
      </p>
    </div>
    <div class="divider"></div>
    <div class="login-right">
      <h1 class="title">VIDYALEKSHMI</h1>
      <form action="/login" method="post">
        <div class="input-group">
          <svg viewBox="0 0 24 24">
            <path
              d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
            />
          </svg>
          <input
            type="text"
            placeholder="Email or Phone Number"
            id="identifier"
            name="identifier"
            required
          />
        </div>
        <div class="input-group" style="margin-top: 20px">
          <svg viewBox="0 0 24 24">
            <path
              d="M18 8h-1V6c0-2.76-2.24-5-5-5S7 3.24 7 6v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V10c0-1.1-.9-2-2-2zm-6 9c-1.1 0-2-.9-2-2s.9-2 2-2 2 .9 2 2-.9 2-2 2zm3.1-9H8.9V6c0-1.71 1.39-3.1 3.1-3.1 1.71 0 3.1 1.39 3.1 3.1v2z"
            />
          </svg>
          <input
            type="password"
            placeholder="Password"
            name="password"
            id="password"
            required
          />
        </div>
        <div class="links" style="margin-top: 20px">
          <span>New User? <a href="/signup" id="signupLink">Signup</a></span>
          <a href="/forgotPassword" id="forgotPassword">Forgot Password</a>
        </div>
        <button type="submit" class="login-btn" style="margin-top: 24px">
          Login
        </button>
      </form>
      <div class="google">
        <a
          class="btn btn-outline-dark"
          id="google-sign-up"
          href=""
          role="button"
          style="text-transform: none"
        >
          <img
            width="20px"
            style="margin-right: 5px"
            alt="Google sign-in"
            src="/user/img/googleIcon.png"
          />
          Login with Google
        </a>
      </div>
    </div>
  </div>
</body>