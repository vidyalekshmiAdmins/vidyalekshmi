<%- include('../partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>College Admission Site</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <style>
    body {
      margin: 0;
    }

    .search-box {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 50%;
      text-align: center;
  
    }

    .input-group {
      margin-bottom: 10px;
    }

    .departments {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 20px;
      margin-top: 50px;
      padding: 0 20px;
    }

    .department-card {
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 5px;
      text-align: center;
      transition: background-color 0.3s, box-shadow 0.3s;
    }

    .department-card:hover {
      background-color: #f1f1f1;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .department-card img {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 10px;
    }

    .first {
  background-image: url("/user/img/admissionOne.jpeg");
  background-position: center bottom; /* Adjust vertical position to bottom */
  background-repeat: no-repeat;
  background-size: cover;
  height: 80vh;
}


    .second {
      text-align: center;
      margin-top: 50px;
    }

    .button-container {
      text-align: center;
      margin-top: 20px;
    }

    .hidden {
      display: none;
    }

 

  </style>
</head>
<body>
  <section class="first">
    <div class="search-box">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Search for colleges">
        <button class="btn btn-primary">Search</button>
      </div>
    </div>
  </section>


  <section class="second">
    <h2>Explore Your Options</h2>
    <p>Find the perfect program for your future.</p>
    <div class="departments" id="departments-container">
      <% departments.slice(0, 16).forEach((department, index) => { %>
        <div class="department-card" data-dept-id="<%= department._id %>"> <img src="/admin/uploads/<%= department.image %>" alt="<%= department.name %>">
          <h3><%= department.name %></h3>

        </div>
      <% }); %>

      </div>
    </section>

  <script>
    const departmentCards = document.querySelectorAll('.department-card');

    departmentCards.forEach(card => {
  card.addEventListener('click', (event) => {
    const deptId = event.currentTarget.dataset.deptId; // Correct usage of event.currentTarget
    console.log("Dept ID:", deptId); // Debugging output
    window.location.href = `/departments/${deptId}`; // Redirect with dept ID
  });
});


    // Existing scripts for show more/less functionality (unchanged)
  </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn"></script> Â  

</body>
</html>
