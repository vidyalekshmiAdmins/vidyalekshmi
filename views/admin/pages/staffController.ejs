<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Staff Management</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

  <div class="d-flex justify-content-between align-items-center mb-4">

    <a href="/admin/add-staff/<%= sectionId %>" class="btn btn-primary">Add Staff </a>


  </div>


  <div class="container mt-5">

<% if (successMessage) { %>
  <div class="alert alert-success text-center" role="alert">
    <%= successMessage %>
  </div>
<% } %>

<% if (errorMessage) { %>
  <div class="alert alert-danger text-center" role="alert">
    <%= errorMessage %>
  </div>
<% } %>


    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2>STAFF DETAILS</h2>
     

    </div>

    <% if (staffList.length === 0) { %>
      <div class="alert alert-warning text-center" role="alert">
        THERE IS NO STAFF ADDED YET
      </div>
    <% } else { %>
      <div class="row">
        <% staffList.forEach(staff => { %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="/admin/uploads/<%= staff.profilePicture %>" class="card-img-top" alt="<%= staff.name %>">


              <div class="card-body">
                <h5 class="card-title"><%= staff.name %></h5>
                <p class="card-text">
                  <strong>Email:</strong> <%= staff.email %><br>
                  <strong>Mobile Number:</strong> <%= staff.mobileNumber %><br>
                  <strong>Job Role:</strong> <%= staff.jobRole.type || 'Not Assigned' %><br>
                  <strong>Salary:</strong> $<%= staff.salary || 'Not Disclosed' %><br>
                </p>
                <a href="/admin/staff/<%= staff._id %>" class="btn btn-primary">View Details</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
