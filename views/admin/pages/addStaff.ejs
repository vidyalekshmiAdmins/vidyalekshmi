<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Staff</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Add Staff</h1>
    <form action="/admin/staff/add/<%= sectionId %>" method="POST" enctype="multipart/form-data">

      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" required>
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" required>
      </div>
      <div class="mb-3">
        <label for="mobileNumber" class="form-label">Mobile Number</label>
        <input type="text" class="form-control" id="mobileNumber" name="mobileNumber" required>
      </div>
      <div class="mb-3">
        <label for="alternativeNumber" class="form-label">Alternative Number</label>
        <input type="text" class="form-control" id="alternativeNumber" name="alternativeNumber">
      </div>

      <!-- Job Role Dropdown -->
      <div class="mb-3">
        <label for="jobRoleType" class="form-label">Job Role Type</label>
        <select class="form-control" id="jobRoleType" name="jobRoleType" required>
          <option value="">Select Job Role</option>
          <% jobRoles.forEach(role => { %>
            <option value="<%= role %>"><%= role %></option>
          <% }); %>
        </select>
        
      </div>

      <div class="mb-3">
        <label for="salary" class="form-label">Salary</label>
        <input type="number" class="form-control" id="salary" name="salary">
      </div>
      <div class="mb-3">
        <label for="profilePicture" class="form-label">Profile Picture</label>
        <input type="file" class="form-control" id="profilePicture" name="profilePicture">
      </div>
      <div class="mb-3">
        <label for="documents" class="form-label">Documents</label>
        <input type="file" class="form-control" id="documents" name="documents" multiple>
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" class="form-control" id="password" name="password" required>
      </div>
      <div class="mb-3">
        <label for="confirmPassword" class="form-label">Confirm Password</label>
        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Add Staff</button>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
