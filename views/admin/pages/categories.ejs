        <br>
        <!-- Category Table -->
        <table class="table" id="example">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>List/unList</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                    <% if (catList?.length>0) { %>
                  
                    <% for( let i = 0; i < catList.length; i++ ) { %>
                    
                        <tr>
                        <td> <%-  i+1 %> </td>
                        <td> <%- catList[i].categoryName %> </td>
                      
                        
                        <td>
                        <% if (catList[i].isListed) { %>
                                <a href="/admin/category/unList/<%- catList[i]?._id %>">
                                    <button type="submit" class="btn btn-danger btn-sm unblock-button">unList</button>
                                </a>
                            <% } else { %>
                                <a href="/admin/category/list/<%- catList[i]?._id %>">
                                    <button type="submit" class="btn btn-success btn-sm unblock-button">list</button>
                                </a>
                                <% } %>
                        </td>
                        <td>
                            <div class="d-flex justify-content-even">
                                <a href="/admin/editCategory/<%- catList[i]._id %>">
                                    <button class="btn btn-info btn-sm"><i class="material-icons md-edit pb-1"></i></button>
                                </a>
                              
                            </div>
                        </td>
                        
                       
                            </tr>
                            
                            <% } %>
    
                            
                            <% } else { %>
                                <h2>No Categories Found !</h2>
                                <% } %>
                             
                                
                            </tbody>
                        </table>
                    </div>
    
    <!-- Add Category Modal -->
    <div class="modal fade" id="addCategoryModal" tabindex="-1" role="dialog" aria-labelledby="addCategoryModalLabel"
        aria-hidden="true">
        <!-- Add category modal content -->
    </div>
    
    <!-- Edit Category Modal -->
    <div class="modal fade" id="editCategoryModal" tabindex="-1" role="dialog" aria-labelledby="editCategoryModalLabel"
        aria-hidden="true">
        <!-- Edit category modal content -->
    </div>
    
    <!-- Include Bootstrap JS (jQuery and Popper.js required) -->
    </section>
    <script>
        $(document).ready(function () {
            new DataTable('#example');
    
        })
    </script>